<div class="c-card c-card--centerpage">
  <div class="c-card__header">
    <div class="c-card__header-title">
      Login
    </div>

    <ul class="c-card__header-actions">
      <% if MatildaCore.config.authentication_permit_signup %>
        <li class="c-card__header-action">
          <a class="c-button c-button--black" href="<%= matilda_core.authentication_signup_view_path %>">Registrati</a>
        </li>
      <% end %>
      <li class="c-card__header-action">
        <a class="c-button c-button--black" href="<%= matilda_core.authentication_recover_password_view_path %>">Password dimenticata</a>
      </li>
    </ul>
  </div>
  <div class="c-card__body">
    <%= form_tag matilda_core.authentication_login_action_path, method: :post, remote: true, data: { controller: 'form', action: 'ajax:success->form#validateResponse', 'form-redirect': matilda_core.groups_select_view_path }, class: 'c-form c-grid__container-spaced' do %>
      <div class="c-input c-grid__col c-grid__col--24">
        <label class="c-input__label" for="username_email">Username / indirizzo email</label>
        <input class="c-input__field" type="text" name="username_email" id="username_email" placeholder="Inserisci l'username o un indirizzo email" autocomplete="off" data-target="form.field" required>
      </div>

      <div class="c-input c-grid__col c-grid__col--24">
        <label class="c-input__label" for="password">Password</label>
        <input class="c-input__field" type="password" name="password" id="password" placeholder="Inserisci la password" autocomplete="off" data-target="form.field" required>
      </div>

      <div class="c-form__actions c-grid__col c-grid__col--24">
        <button class="c-button" data-target="form.submit">Accedi</button>
      </div>
    <% end %>
  </div>
</div>
