<div class="c-card c-card--centerpage">
  <div class="c-card__header">
    <div class="c-card__header-title">
      <%= I18n.t 'matilda_core.titles.recover_password' %>
    </div>

    <ul class="c-card__header-actions">
      <li class="c-card__header-action">
        <a class="c-button c-button--black" href="<%= matilda_core.authentication_login_view_path %>"><%= I18n.t 'matilda_core.cta.login' %></a>
      </li>
    </ul>
  </div>
  <div class="c-card__body">
    <div class="c-message">
      <div class="c-message__title"><%= I18n.t 'matilda_core.strings.recover_password_complete_title' %></div>
      <div class="c-message__content c-message__content--small">
        <%= I18n.t 'matilda_core.strings.recover_password_complete_content' %>
        <br><br>
        <a class="c-button" href="<%= matilda_core.authentication_update_password_view_path %>"><%= I18n.t 'matilda_core.cta.continue' %></a>
      </div>
    </div>
  </div>
</div>
