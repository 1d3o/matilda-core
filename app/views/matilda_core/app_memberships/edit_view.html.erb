<div class="c-section__content c-grid__container-spaced">
  <div class="c-section__content-block c-grid__col c-grid__col--24 c-grid__col--md-16">
    <div class="c-card">
      <div class="c-card__header">
        <div class="c-card__header-title">
          Gestione permessi
        </div>
      </div>
      <div class="c-card__body">
        <%= form_tag matilda_core.app_memberships_edit_permissions_action_path, method: :post, remote: true, data: { controller: 'form', action: 'ajax:success->form#validateResponse', 'form-reload': 'true' }, class: 'c-form c-grid__container-spaced' do %>
          <% groups = MatildaCore.config.memberships_permissions.group_by { |mp| mp[:group] } %>
          <% groups.each do |group, permissions| %>
            <div class="c-form__title c-grid__col c-grid__col--24">
              <%= group %>
            </div>
            
            <% permissions = permissions.sort_by { |p| p[:index] } %>
            <% permissions.each do |permission| %>
              <div class="c-input-checkbox c-grid__col c-grid__col--24">
                <input type="checkbox" class="c-input-checkbox__field" name="permissions[]" id="permissions<%= permission[:name] %>" value="<%= permission[:name] %>" data-target="form.field" <%= @membership.permissions.include?(permission[:name]) ? 'checked' : '' %>>
                <label class="c-input-checkbox__label" for="permissions<%= permission[:name] %>"><%= permission[:label] %></label>
              </div>
            <% end %>
          <% end %>

          <div class="c-form__actions c-grid__col c-grid__col--24">
            <button class="c-button" data-target="form.submit">Aggiorna</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="c-section__content-block c-grid__col c-grid__col--24 c-grid__col--md-8">
    <div class="c-card c-card--hasnext">
      <div class="c-card__header">
        <div class="c-card__header-title">
          Informazioni
        </div>
      </div>
      <div class="c-card__body">
        <table class="c-table">
          <tbody>
            <tr>
              <th>Username</th>
              <td>@<%= @user.username %></td>
            </tr>
            <tr>
              <th>Data di registrazione</th>
              <td><%= print_date(@membership.created_at) %></td>
            </tr>
            <tr>
              <th>Ultimo accesso</th>
              <td><%= print_date(@user.user_sessions.last&.created_at) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
